<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_utama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_17dp"
            android:paddingStart="@dimen/dimen_24dp"
            android:paddingEnd="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:background="@drawable/card_shape">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dimen_size_icon_digiteam"
                android:layout_height="@dimen/dimen_size_icon_digiteam"
                android:layout_centerVertical="true"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/logo"
                android:layout_marginStart="12dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/digiteam"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="@string/digiteam2"
                    android:textColor="@color/text_grey"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="@string/digiteam3"
                    android:textColor="@color/text_grey"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_4dp"
            >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dimen_size_avatar"
                android:layout_height="@dimen/dimen_size_avatar"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar"
                android:contentDescription="@string/avatar"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/avatar"
                android:layout_marginStart="@dimen/dimen_8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="@string/user"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="@string/bagian"
                    android:textColor="@color/text_grey"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_24dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:elevation="@dimen/dimen_6dp"

            android:background="@drawable/bodyshape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20sp"
                android:text="@string/desc_kerja"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14sp"
                android:text="@string/jam_kerja"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textColor="@color/text_blue"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:elevation="@dimen/dimen_2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dimen_input_time"
                    android:layout_height="@dimen/dimen_height_button"
                    android:background="@drawable/shape_jam"
                    android:text="@string/detime"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:paddingStart="@dimen/dimen_8dp"
                    android:paddingEnd="@dimen/dimen_8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_height_button"
                    android:paddingTop="12dp"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/button_jam">
                    <ImageView
                        android:layout_width="@dimen/dimen_17dp"
                        android:layout_height="@dimen/dimen_17dp"
                        android:src="@drawable/icon_jam"
                        android:contentDescription="@string/iconTime"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/batas"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textColor="@color/text_grey"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_height_button"
                android:backgroundTint="@color/green"
                android:text="@string/checkin"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_24dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:elevation="@dimen/dimen_6dp"

            android:background="@drawable/bodyshape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20sp"
                android:text="@string/laporan"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dimen_width_laporan_bulan"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16sp"
                        android:text="@string/maret"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:textColor="@color/text_hijau"
                        android:textStyle="bold"
                        />
                    <GridView
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:id="@+id/gridView"
                        android:layout_width="@dimen/dimen_width_laporan_bulan"
                        android:layout_height="@dimen/dimen_height_laporan_bulan"
                        android:numColumns="5"
                        android:horizontalSpacing="@dimen/dimen_2dp"
                        android:verticalSpacing="@dimen/dimen_2dp"
                        android:stretchMode="columnWidth"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_width_laporan_bulan"
                    android:layout_marginStart="11dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16sp"
                        android:text="@string/april"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:textColor="@color/text_hijau"
                        android:textStyle="bold"
                        />
                    <GridView
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:id="@+id/gridView2"
                        android:layout_width="@dimen/dimen_width_laporan_bulan"
                        android:layout_height="@dimen/dimen_height_laporan_bulan"
                        android:numColumns="5"
                        android:horizontalSpacing="@dimen/dimen_2dp"
                        android:verticalSpacing="@dimen/dimen_2dp"
                        android:stretchMode="columnWidth"
                        tools:ignore="NestedScrolling"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_height_button"
                android:backgroundTint="@color/green"
                android:text="@string/buat"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_marginBottom="@dimen/dimen_buttom_space"
            >
            <LinearLayout
                android:id="@+id/izin"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="36dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/izin"
                    android:contentDescription="@string/izinIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/izin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kehadiran"
                android:layout_toEndOf="@+id/izin"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/kehadiran"
                    android:contentDescription="@string/kehadiranIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/kehadiran" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laporan"
                android:layout_toEndOf="@+id/kehadiran"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/laporan"
                    android:contentDescription="@string/laporanIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/lapor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/agenda"
                android:layout_below="@id/izin"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/agenda"
                    android:contentDescription="@string/agendaIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/agenda" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/booking"
                android:layout_below="@id/izin"
                android:layout_toEndOf="@id/agenda"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/booking"
                    android:contentDescription="@string/bookingIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/booking" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wiki"
                android:layout_below="@id/izin"
                android:layout_toEndOf="@id/booking"
                android:layout_width="@dimen/dimen_width_grid_icon"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="@dimen/dimen_size_icon_list"
                    android:layout_height="@dimen/dimen_size_icon_list"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wiki"
                    android:contentDescription="@string/wikiIcon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/wiki"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>>
</ScrollView>